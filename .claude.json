// Location: ~/.claude.json
// Docs: https://claudelog.com/configuration#mcp-configuration

{
  "mcpServers" : {
 	"sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "ddg-search": {
      "command": "uvx",
      "args": ["duckduckgo-mcp-server"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "YOUR_API_KEY"]
    },
    "allpepper-memory-bank": {
      "type": "stdio",  
    	"command": "npx",
    	"args": ["-y", "@allpepper/memory-bank-mcp"],
    	"env": {
      	"MEMORY_BANK_ROOT": "<$HOME>/memory-bank-mcp"
    	}
  	},
	"exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=YOUREXAKEY&tools=web_search_exa,deep_search_exa,get_code_context_exa,crawling_exa,company_research_exa,linkedin_search_exa,deep_researcher_start,deep_researcher_check",
      "headers": {}
	}
  }
}
